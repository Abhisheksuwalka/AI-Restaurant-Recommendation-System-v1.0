# GitHub Token for accessing marketplace models API
GITHUB_TOKEN=your_github_token_here

# Hugging Face Token for accessing HF models
HUGGINGFACE_TOKEN=your_huggingface_token_here

# OpenAI API Key (optional, only if using OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here

# Weather API Key for contextual emotional analysis
WEATHER_API_KEY=your_weather_api_key_here

# Google Calendar API credentials (optional, for stress detection)
GOOGLE_CALENDAR_CREDENTIALS=path_to_credentials.json

# LLM Configuration
LLM_MODEL=microsoft/DialoGPT-medium
LLM_PROVIDER=huggingface  # Options: github, huggingface, openai
MAX_TOKENS=4000
TEMPERATURE=0.7

# Recommendation System Settings
USE_LLM_ENHANCEMENT=true
LLM_EXPLANATION_ENABLED=true

# Emotional Intelligence Settings
USE_EMOTIONAL_RECOMMENDATIONS=true
EMOTIONAL_CACHE_TTL=3600
EMOTIONAL_WEIGHT=0.3
